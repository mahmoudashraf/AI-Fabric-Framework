# Development Profile Configuration
# Optimized for local development with enhanced AI features

spring:
  datasource:
    url: jdbc:h2:mem:devdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
    username: sa
    password: 
    driver-class-name: org.h2.Driver
    hikari:
      maximum-pool-size: 5
      minimum-idle: 1
      connection-timeout: 20000
      auto-commit: true
      pool-name: HikariCP-Dev

  jpa:
    hibernate:
      ddl-auto: create-drop
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.H2Dialect
        format_sql: true
        jdbc:
          batch_size: 20
    open-in-view: false

  # Disable Liquibase for dev (using H2)
  liquibase:
    enabled: false

  # H2 Console for debugging
  h2:
    console:
      enabled: true
      path: /h2-console
      settings:
        web-allow-others: false
        trace: false
        web-port: 8081

  # Ensure proper database initialization
  sql:
    init:
      mode: always
      continue-on-error: true
      platform: h2

# AI Configuration for Development
ai:
  providers:
    openai-api-key: ${OPENAI_API_KEY:sk-dev-key}
    openai-model: gpt-4o-mini
    openai-embedding-model: text-embedding-3-small
    openai-max-tokens: 1000
    openai-temperature: 0.3
    openai-timeout: 30
    
    pinecone-api-key: ${PINECONE_API_KEY:dev-key}
    pinecone-environment: dev
    pinecone-index-name: easyluxury-dev
    pinecone-dimensions: 1536
    
    vector-db-type: lucene
    enable-rag: true
    enable-behavioral-ai: true
    enable-smart-validation: true
    enable-auto-generation: true
  
  # Vector Database Configuration for Development
  vector-db:
    type: lucene  # Use Lucene for development
    lucene:
      index-path: ./data/dev-lucene-vector-index
      similarity-threshold: 0.6  # Lower threshold for dev
      max-results: 50  # Fewer results for dev
      create-index-if-not-exists: true
      analyzer: standard
      use-compound-file: false  # Faster for dev
      max-buffered-docs: 100  # Smaller buffer for dev
  
  service:
    enabled: true
    auto-configuration: true
    caching:
      enabled: false  # Disable caching for dev
    metrics:
      enabled: true
    health-checks:
      enabled: true
    logging:
      enabled: true
    default-timeout: 10000  # Shorter timeout for dev
    max-retries: 1  # Fewer retries for dev
    retry-delay: 500
    async:
      enabled: false  # Disable async for dev
      thread-pool-size: 2
    batch-processing:
      enabled: false  # Disable batch processing for dev
      batch-size: 10
    rate-limiting:
      enabled: false  # Disable rate limiting for dev
      rate-limit-per-minute: 10000
    circuit-breaker:
      enabled: false  # Disable circuit breaker for dev
      threshold: 10
      timeout: 30000

# Easy Luxury AI Configuration for Development
easyluxury:
  ai:
    # Index Names
    product-index-name: easyluxury-products-dev
    user-index-name: easyluxury-users-dev
    order-index-name: easyluxury-orders-dev
    
    # Feature Toggles - All enabled for dev
    enable-product-recommendations: true
    enable-user-behavior-tracking: true
    enable-smart-validation: true
    enable-ai-content-generation: true
    enable-ai-search: true
    enable-ai-rag: true
    enable-product-description-generation: true
    enable-product-categorization: true
    enable-product-tagging: true
    
    # AI Model Configuration
    default-ai-model: gpt-4o-mini
    default-embedding-model: text-embedding-3-small
    max-tokens: 1000  # Shorter for dev
    temperature: 0.3
    timeout-seconds: 30  # Shorter timeout for dev
    
    # Product-Specific AI Settings
    product:
      description-generation:
        enabled: true
        max-length: 300  # Shorter for dev
        style: luxury
      categorization:
        enabled: true
        categories: luxury,premium,exclusive,limited-edition
      tagging:
        enabled: true
        max-tags: 5  # Fewer tags for dev
        tag-types: material,style,occasion,price-range,season
      search:
        enabled: true
        similarity-threshold: 0.6  # Lower threshold for dev
        max-results: 10  # Fewer results for dev
      recommendations:
        enabled: true
        max-recommendations: 5  # Fewer recommendations for dev
        algorithm: collaborative-filtering
    
    # User-Specific AI Settings
    user:
      behavior-tracking:
        enabled: true
        track-views: true
        track-purchases: true
        track-searches: true
        retention-days: 30  # Shorter retention for dev
      preferences:
        learning-enabled: true
        update-frequency: hourly  # More frequent for dev
        min-interactions: 2  # Lower threshold for dev
      recommendations:
        enabled: true
        max-recommendations: 8  # Fewer for dev
        diversity-factor: 0.5  # Higher diversity for dev
    
    # Order-Specific AI Settings
    order:
      analysis:
        enabled: true
        pattern-recognition: true
        fraud-detection: false  # Disable for dev
      insights:
        enabled: true
        trend-analysis: true
        seasonal-patterns: false  # Disable for dev

# Supabase Configuration for Development
supabase:
  url: https://dev-project.supabase.co
  api-key: dev-anon-key
  service-role-key: dev-service-role-key

# Mock Authentication Configuration for Development
app:
  mock-auth:
    enabled: true

# AWS S3/MinIO Configuration for Development
aws:
  s3:
    endpoint: http://localhost:9000
    region: us-east-1
    bucket: easyluxury-dev
    access-key: dev-access-key
    secret-key: dev-secret-key
    presigned-url-duration: 900

# Logging for Development
logging:
  level:
    root: INFO
    com.easyluxury: DEBUG
    com.ai.infrastructure: DEBUG
    org.springframework.web: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
  pattern:
    console: "%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"

# Management/Actuator for Development
management:
  endpoints:
    web:
      exposure:
        include: "*"
  endpoint:
    health:
      show-details: always